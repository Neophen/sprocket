{
  "devDependencies": {
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@tailwindcss/typography": "^0.5.9",
    "@types/jest": "^29.5.2",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.0.1",
    "jest": "^29.5.0",
    "parcel": "^2.8.3",
    "process": "^0.11.10",
    "tailwindcss": "^3.3.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "client:clean": "rm -rf build dist .parcel-cache",
    "client:build": "parcel build client/src/index.ts --dist-dir priv/static --no-source-maps",
    "client:watch": "parcel client/src/index.ts --no-hmr --dist-dir priv/static",
    "client:test": "jest",
    "tailwind:build": "npx tailwindcss -i ./app.css -o priv/static/app.css",
    "tailwind:watch": "npx tailwindcss -i ./app.css -o priv/static/app.css --watch",
    "watch": "gleam build && concurrently --kill-others \"gleam run\" \"npm run client:watch\" \"npm run tailwind:watch\""
  },
  "dependencies": {
    "morphdom": "^2.7.0"
  }
}
