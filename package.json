{
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.9",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.0.1",
    "tailwindcss": "^3.3.1"
  },
  "scripts": {
    "tailwind:build": "npx tailwindcss -i ./app.css -o ./priv/static/app.css",
    "tailwind:watch": "npx tailwindcss -i ./app.css -o ./priv/static/app.css --watch",
    "watch": "gleam build && concurrently --kill-others \"gleam run\" \"npm run tailwind:watch\""
  }
}